<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="-6dp"
    tools:layout_editor_absoluteY="-5dp">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rating_txt"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:text="@string/rating"
                android:textColor="#121211"
                android:layout_marginBottom="23dp"
                app:layout_constraintBottom_toTopOf="@+id/description_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/year_txt"
                tools:layout_editor_absoluteY="525dp" />

            <ImageView
                android:id="@+id/img_url"
                android:layout_width="300dp"
                android:layout_height="293dp"
                app:layout_constraintBottom_toTopOf="@+id/title_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="23dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@android:drawable/ic_menu_gallery"
                tools:layout_editor_absoluteY="34dp" />

            <TextView
                android:id="@+id/year_txt"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:text="@string/year"
                android:textColor="#121211"
                android:layout_marginBottom="23dp"
                app:layout_constraintBottom_toTopOf="@+id/rating_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_txt"
                tools:layout_editor_absoluteY="443dp" />

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:text="@string/title"
                android:textColor="#121211"
                android:layout_marginBottom="23dp"
                app:layout_constraintBottom_toTopOf="@+id/year_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_url"
                tools:layout_editor_absoluteY="361dp" />

            <TextView
                android:id="@+id/description_txt"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/description"
                android:textColor="#121211"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rating_txt" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>